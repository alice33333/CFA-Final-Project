<% provide(:title, 'Front of House Averages') %>
<h2>Front of House Averages</h2>

<aside class="col-md-11 col-md-offset-3">
     <div class="form-inline">
    <div class="form-group">
    <h2> Storewide Average: </h2>
    </div>
    <div class="form-group">
    <% average = User.average(:overall) %>
    <h2> <%= number_with_precision(average, :precision => 1) %> </h2>
     </div>
      </div>
      </aside>

    <% i = 1 %>
     <% @users.each do |a| %>
     <% if a.role == 1 || a.role == 4 %>
       <div class="form-inline">
    <div class="form-group">
        <h17><%= i%> </h17>
        </div>
        <div class="form-group">
        <h17><%= "."%> </h17>
        </div>
        <div class="form-group">
        <h17><%= a.name.to_s %> </h17>
        </div>
        <div class="form-group">
        <h2><%= a.overall.to_s %> </h2>
        </div>
        <% i = i + 1 %>
    </div>
    <% end %>
    <% end %>