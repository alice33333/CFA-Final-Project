
<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-11 ">
    <section class="user_info">
      <h4>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h4>
      <h5>
        <% if @user.role == 0 %>
          <h3>Director</h3>
        <% end %>
        <% if @user.role == 1 %>
          <h3>Front of House</h3>
          <h3>Team Member</h3>
        <% end %>
        <% if @user.role == 2 %>
          <h3>Back of House</h3>
          <h3>Team Member</h3>
        <% end %>
         <% if @user.role == 3 %>
          <h3>Manager</h3>
        <% end %>
         <% if @user.role == 4 %>
          <h3>Front of House</h3>
          <h3>Shift Leader</h3>
        <% end %>
         <% if @user.role == 5 %>
          <h3>Back of House</h3>
          <h3>Shift Leader</h3>
        <% end %>
      </h5>
      
      <% if @user.role == 1 || @user.role == 2 || @user.role == 3 || @user.role == 4 || @user.role == 5 %>
       <aside class="col-md-11 col-md-offset-2">
      <div class="form-group">
            <div class="form-inline">
            <div class="form-group">
                  <h6> H </h6>
            </div>
            <div class="form-group">
                  <h6> E </h6>
            </div>
            <div class="form-group">
                  <h6> A </h6>
            </div>
            <div class="form-group">
                  <h6> R </h6>
            </div>
            <div class="form-group">
                  <h6> T </h6>
            </div>
        </div>
    </div>
    </aside>
      
      <aside class="col-md-11 col-md-offset-2">
      <div class="form-group">
            <div class="form-inline">
            <div class="form-group">
                  <h2> <%= @user.question_one %> </h2>
            </div>
            <div class="form-group">
                  <h2> <%= @user.question_two %> </h2>
            </div>
            <div class="form-group">
                  <h2> <%= @user.question_three %> </h2>
            </div>
            <div class="form-group">
                  <h2> <%= @user.question_four %> </h2>
            </div>
            <div class="form-group">
                  <h2> <%= @user.question_five %> </h2>
            </div>
        </div>
    </div>
    </aside>
    <% end %>
    
    
      <div class="col-md-10 text-center" > 
      <% if @user.role == 0 && @user == current_user %>
       <%= link_to "Evaluate Team", all_path, class: "btn btn-lg btn-default" %>
      <% end %>
      
      <% if @user.role == 4 && @user == current_user %>
       <%= link_to "Evaluate Front", front_path, class: "btn btn-lg btn-default" %>
      <% end %>
      
      <% if @user.role == 5 && @user == current_user %>
       <%= link_to "Evaluate Back", back_path, class: "btn btn-lg btn-default" %>
      <% end %>
      
      <% if @user.role == 3 && @user == current_user %>
       <%= link_to "Evaluate Team", manager_path, class: "btn btn-lg btn-default" %>
      <% end %>
       </div>
    </section>
  </aside>
  
</div>